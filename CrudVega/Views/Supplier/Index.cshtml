@model IEnumerable<SupplierModel>

@{
    ViewData["Title"] = "Fornecedores";
}

@section Styles {
    <link rel="stylesheet" href="~/wwwroot/css/site.css" />
}

<h1>Fornecedores</h1>
<div class="container">
    <div class="row Supplier-Index-row">

        <a class="btn btn-primary col-3 Supplier-Index-element" asp-controller="Supplier" asp-action="Create">Cadastrar Fornecedor +</a>

        <form action="/" method="post" class="Supplier-Index-formSpace col-12">
            <div class="Supplier-Index-searchFilter Supplier-Index-element">
                <div class="row">
                    <div class="col-4">
                        <label>Nome do produto</label><br />
                        <input type="text" name="name" value="" />
                    </div>
                    <div class="col-4">
                        <label>Período inicial</label><br />
                        <input type="date" name="name" value="" />
                    </div>
                    <div class="col-4">
                        <label>Período final</label><br />
                        <input type="date" name="name" value="" />
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary Supplier-Index-searchBtn">Buscar</button>
                    </div>
                </div>
            </div>
        </form>


        <table class="table Supplier-Index-element">
            <thead>
                <tr>
                    <th scope="col">Código</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">CNPJ</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @if(Model != null && Model.Any())
                {
                    foreach(SupplierModel supplier in Model)
                    {
                        <tr>
                            <th>@supplier.Id.ToString()</th>
                            <td>@supplier.Name.ToString()</td>
                            <td>@supplier.Telephone.ToString()</td>
                            <td>@supplier.CNPJ.ToString()</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a role="button" class="btn btn-warning" asp-route-id="@supplier.Id" asp-controller="Supplier" asp-action="Edit">Editar</a>
                                    <a role="button" class="btn btn-danger" asp-route-id="@supplier.Id"  asp-controller="Supplier" asp-action="Delete">Excluir</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

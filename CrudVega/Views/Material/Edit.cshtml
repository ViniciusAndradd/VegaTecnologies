@{
    ViewData["Title"] = "Editar produto";
}

@section Styles {
    <link rel="stylesheet" href="~/wwwroot/css/site.css" />
}

@model CrudVega.Models.Material;

<h1>Editar Produto</h1>
<div class="container Material-Create-container">
    <div class="row Material-Create-row">
        <form asp-action="Create" method="post" class="col-7 class="Material-Create-formSpace">
            <div class="row">
                <select class="form-select form-control-sm Material-Create-formData" aria-label="Default select example">
                    <option selected>Fornecedor</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
                <input class="form-control form-control-sm Material-Create-formData" type="text" placeholder="Código" asp-for="Code">
                <input class="form-control form-control-sm Material-Create-formData" type="text" placeholder="Nome" asp-for="Name">
                <input class="form-control form-control-sm Material-Create-formData" type="text" placeholder="Descrição" asp-for="Description">
                <input class="form-control form-control-sm Material-Create-formData" type="text" placeholder="Código Fiscal" asp-for="FiscalCode">
                <input class="form-control form-control-sm Material-Create-formData" type="text" placeholder="Espécie" asp-for="Specie">


                <button class="btn btn-success col-12" type="submit">Cadastrar</button>
            </div>
        </form>
        <br />
        <a class="btn btn-primary col-7 Material-Create-backBtn" asp-controller="Material" asp-action="Index">Voltar</a>
    </div>
</div>